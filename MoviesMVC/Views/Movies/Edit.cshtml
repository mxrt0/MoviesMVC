@model MoviesMVC.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-decoration-underline mb-3 fw-bolder">Edit Movie</h1>

<hr />
<div class="row d-flex flex-column justify-content-center align-content-center create-div">
    <div class="col-md-4">
        <form asp-action="Edit" class="create-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="fw-bolder text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="fw-bolder text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="fw-bolder text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="fw-bolder text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for=Rating" class="form-control" />
                <span asp-validation-for="Rating" class="fw-bolder text-danger"></span>
            </div>
            <div class="form-group w-50">
                <input type="submit" value="Save" class="btn btn-primary edit-btn" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
