@model MoviesMVC.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-decoration-underline mb-3 fw-bolder">Create Movie</h1>

<hr />
<div class="row d-flex flex-column justify-content-center align-content-center create-div">
    <div class="col-md-4">
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span class="fw-bolder text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span class="fw-bolder text-danger" asp-validation-for="ReleaseDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span class="fw-bolder text-danger" asp-validation-for="Genre"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span class="fw-bolder text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span class="fw-bolder text-danger" asp-validation-for="Rating"></span>
            </div>
            <div class="form-group w-50">
                <input type="submit" value="Create" class="btn btn-success mb-2 mt-2 create-btn" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
